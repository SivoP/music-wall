<h1> Input a new track! </h1>

<% if @track && @track.errors.any? %>
<ul>
 <% @track.errors.full_messages.each do |message| %>
 <li> <%= message %> </li>
 <% end %>
</ul>
 <% end %>

 

<form method='post' action='/tracks'> 
  <fieldset>
    <legend>Add Your Track Below!</legend>
  <div>  
    <label>Song Title</label>
      <br>
      <input type="text" name="song_title" value= "<%= @track && @track.song_title %>" placeholder="Your song here...">
      <br>
  </div>
  <br>
  <div>
    <label>Artist</label>
      <br>
      <input type="text" name="author" value="<%= @track && @track.author %>">
      <br>
  </div>
  <br>
  <div>
    <label>URL</label>
    <br>
      <input type="text" name="url" value = "<%= @track && @track.url %>">
  </div>
  <br>

  <div>
    
    <input class="btn btn-primary" type="submit" value="Submit">
    
  </div>
  </fieldset>
</form>




